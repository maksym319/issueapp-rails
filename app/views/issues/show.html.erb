<h3 class="mb-3">Issue <%= @issue.no %>: <%= @issue.title %></h3>

<div class="d-flex">
  <p class="w-50">
    <strong>Issue Number:</strong> <%= @issue.no %><br />
  </p>
  <p class="w-50">
    <strong>Issue Created At:</strong> <%= @issue.created_at %><br />
  </p>
</div>
<p class="mb-3">
  <strong>Title:</strong> <%= @issue.title %><br />
</p>
<p class="mb-3">
  <strong>Description :</strong> <%= @issue.description %><br />
</p>
<p class="mb-3">
  <strong>Assigned to:</strong> <%= @issue.assigned_to %><br />
</p>
<p class="mb-3">
  <strong>Status:</strong> <%= @issue.status %><br />
</p>

<h3>Comments</h3>
<ul>
  <% @comments.each do |c| %>
  <li>
    <div class="d-flex justify-content-between">
      <p><%= c.description %></p>
      <p><%= c.created_at %></p>
    </div>
  </li>
  <% end %>
</ul>

<%= form_with model: @comment do |f| %>
  <div class="input-group">
    <%= f.text_field :issue_id, value: @issue.id, class: "form-control", hidden: true %>
  </div>
  <div class="input-group mb-3">
    <%= f.text_field :description, class: "form-control", placeholder: "Comment", required: true %>
  </div>
  <%= f.submit "Add comment", { controller: "issues",  class: "btn btn-primary" } %>
<% end %>

<hr />
<div class="mt-3">
  <%= link_to "Back", { controller: "projects", action: "show", id: @issue.project.id } %>
</div>