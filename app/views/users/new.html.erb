<div class="ml-auto mr-auto" style="width: 24rem">
  <h3 class="mb-4 text-center">Sign Up</h3>
  <%= form_with model: @user do |f| %>
    <div class="form-group">
      <%= f.label :username, "Username:" %>
      <%= f.text_field :username, class: "form-control", placeholder: "Username" %>
      <% if @user.errors[:username].length != 0 %>
        <small class="form-text text-danger"><%= @user.errors[:username][0] %></small>
      <% end %>
    </div>
    <div class="form-group">
      <%= f.label :password, "Password:" %>
      <%= f.text_field :password, class: "form-control", type: "password", placeholder: "Password" %>
    </div>
    <%= f.submit "Signup", class: "btn btn-primary w-100 mt-3" %>
  <%end%>
</div>
