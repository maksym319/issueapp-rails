<div class="ml-auto mr-auto" style="width: 24rem">
  <h3 class="mb-4 text-center">Login</h3>
  <%= form_with url: "/login" do |f| %>
    <div class="form-group">
      <%= f.label :username, "Username:" %>
      <%= f.text_field :username, class: "form-control", placeholder: "Username" %>
    </div>
    <div class="form-group">
      <%= f.label :password, "Password:" %>
      <%= f.text_field :password, class: "form-control", type: "password", placeholder: "Password" %>
    </div>
    <%= f.submit "Login", class: "btn btn-primary w-100 mt-3" %>
  <%end%>

  <%= button_to "Sign Up", '/users/new', class: "btn btn-primary mt-3 w-100", method: :get%>
</div>
