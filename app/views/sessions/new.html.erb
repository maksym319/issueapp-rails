<h3>Login</h3>
<%= form_with url: "/login" do |f| %>
  <div class="form-group">
    <%= f.label :username, "Username:" %>
    <%= f.text_field :username, class: "form-control", placeholder: "Username" %>
  </div>
  <div class="form-group">
    <%= f.label :password, "Password:" %>
    <%= f.text_field :password, class: "form-control", type: "password", placeholder: "Password" %>
  </div>
  <%= f.submit "Login", class: "btn btn-primary", style: "width: 90px" %>
<%end%>

<%= button_to "Sign Up", '/users/new', class: "btn btn-primary mt-3", style: "width: 90px", method: :get%>
